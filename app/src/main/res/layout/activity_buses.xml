<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buses"
    android:background="@drawable/appbk1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="319dp"
        android:layout_height="401dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233">

        <Button
            android:id="@+id/addb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Add New BUS"
            android:textColor="@color/theme_white"
            app:layout_constraintBottom_toTopOf="@+id/modib"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/modib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Modify Bus Driver Details"
            android:textColor="@color/theme_white"
            app:layout_constraintBottom_toTopOf="@+id/remb"
            app:layout_constraintTop_toBottomOf="@+id/addb" />

        <Button
            android:id="@+id/remb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Remove BUS"
            android:textColor="@color/theme_white"
            app:layout_constraintBottom_toTopOf="@+id/blist"
            app:layout_constraintTop_toBottomOf="@+id/modib" />

        <Button
            android:id="@+id/blist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="View Bus List"
            android:textColor="@color/theme_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remb"
            tools:layout_editor_absoluteX="-16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>