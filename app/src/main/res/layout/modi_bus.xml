<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/mbno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:hint="Enter Bus Number" />
    <Button
        android:id="@+id/mbfetch"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Fetch Bus Details"
        android:textColor="@color/theme_white"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/mdname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:layout_marginRight="20dp"
        android:hint="Driver Name" />

    <EditText
        android:id="@+id/mdpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:layout_marginRight="20dp"
        android:hint="Driver Password" />

    <EditText
        android:id="@+id/mdmno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Driver Mobile Number"
        />

    <Button
        android:id="@+id/mbupdate"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Update Records"
        android:textColor="@color/theme_white"
        android:layout_marginBottom="10dp"/>



</LinearLayout>
